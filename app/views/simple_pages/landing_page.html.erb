<section id="discography-section">
  <div id="parallax-discography" class="parallax">
    <!-- background for the paralax effect -->
    <div class="parallax-header text-center">
      <h1>DISCOGRAPHY</h1>
    </div>
  </div>

  <div class="container img-grid-container">
    <div class="row">
      <% @featured_songs.each do |song| %>
      <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4 img-grid wrapper">
        <%= link_to image_tag(song.image, class: 'img-fluid song-image'), song %>
        <%= link_to song do %>
        <div class="image-overlay">
          <div class="text-overlay"><%= song.name %></div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div> <!-- end row -->
  </div> <!-- end container img-grid-container-->
</section> <!-- end discography section -->

<section id="gallery-section">
  <div id="parallax-gallery" class="parallax">
    <!-- background for the paralax effect -->
    <div class="parallax-header text-center">
      <h1>Gallery</h1>
    </div>
  </div>

  <div class="container-fluid">

    <br>

    <div class="row">
      <% @featured_images.each do |image| %>
      <div class="d-flex flex-wrap m-auto">
        <%= link_to image_tag(image.image_url, class: "img-fluid gallery-image"), data: {toggle: 'modal', target: '#image-modal'} %>
      </div>
      

      <div class="modal hide fade" id="image-modal" title="image-modal">
        <div class="modal-header">
          <button aria-hidden="true" class="btn btn-danger" data-dismiss="modal" type="button">&times;</button>
          <h3><%= image.image_name %></h3>
        </div>
        <div class="modal-body">
          <%= image.image_url %>
        </div>
        <div class="modal-footer">
          <%= image.image_description %>
        </div>
        </div>
    <% end %>
      </div> <!-- end row -->
    </div> <!-- end container -->
  </section> <!-- end gallery section -->

  <br>

  <section>
    <div id="parallax-videos" class="parallax">
      <!-- background for the paralax effect -->
      <div class="parallax-header text-center">
        <h1>VIDEOS</h1>
      </div>
    </div>

    <div class="container img-grid-container">
      <div class="row">
        <% @featured_videos.each do |video| %>
        <div class="col-xs-6 col-md-4 img-grid wrapper">
          <%= image_tag (video.image), class: 'img-fluid video-image' %>
          <div class="image-overlay">
            <div class="text-overlay">
              <!-- MODAL TRIGGER -->
              <span class="far fa-play-circle" data-toggle="modal" data-target="#videoModal" data-theVideo="<%= video.youtube_link %>"></span>
              <p><%= video.name %></p>
            </div>
          </div>
        </div>
        <% end %>

        <!-- MODAL -->
        <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div>
                  <iframe width="100%" height="350" src=""></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> <!-- end modal -->
    </div> <!-- end row -->
  </div> <!-- end container img-grid-container-->
</section> <!-- end videos section -->

<section id="events-section">
  <div id="parallax-events" class="parallax">
    <!-- background for the paralax effect -->
    <div class="parallax-header text-center">
      <h1>EVENTS</h1>
    </div>
  </div>

  <div class="container">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Date</th>
            <th>Entrance</th>
            <th>Tickets Available At:</th>
          </tr>
        </thead>
        <tbody>
          <% @featured_events.each do |event| %>
          <tr>
            <td><%= event.event_name %></td>
            <td><%= event.venue %></td>
            <td><%= event.date %></td>
            <td>R<%= event.entrance %></td>
            <td><%= event.tickets_available_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- end table responsive -->
    <br>
    <div class="text-center">
      <%= link_to simple_pages_download_epk_url do %>
      <button class="btn btn-custom">DOWNLOAD OUR EPK</button>
      <% end %>
      <br>
      <span>&amp;</span>
      <br>
      <%= link_to root_path(anchor: 'contact-section') do %>
      <button class="btn btn-custom">CONTACT US FOR BOOKINGS</button>
      <% end %>
    </div>
  </div> <!-- end container -->
</section> <!-- end events section -->
<br>


<br>
<section id="contact-section">
  <div id="parallax-contact" class="parallax">
    <!-- background for the paralax effect -->
    <div class="parallax-header text-center">
      <h1>CONTACT US</h1>
    </div>
  </div>

  <div class="container">
    <div class="contact-form">
      <%= flash[:notice] %>

      <%= form_tag("/simple_pages/thank_you") do |form| %>
      <div class="form-group">
        <%= label_tag :name, "Name", class: "sr-only" %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Name" %>
      </div> <!-- end form-group -->

      <div class="form-group">
        <%= label_tag :email, "Email Address", class: "sr-only" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email Address" %>
      </div>

      <div class="form-group">
        <%= label_tag :message, "Message", class: "sr-only" %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Give us your thoughts...", rows: 5 %>
      </div>
      <%= submit_tag "Send", class: "btn btn-custom" %>
      <% end %>
    </div>
  </div>
</section>